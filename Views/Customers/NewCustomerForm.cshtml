@model vidly.ViewModels.NewCustomerFormViewModels
@{
    ViewBag.Title = "Add New Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.customer.name)
        @Html.TextBoxFor(m => m.customer.name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.customer.BirthDate)
        @Html.TextBoxFor(m => m.customer.BirthDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "name"), "Select Membership Types", new { @class = "form-control" })
    </div>
    <div class="form-check">
        <label class="form-check-label">
            @Html.CheckBoxFor(m => m.customer.IsSubscribedToNewsLetter) Is Subscribed
        </label>
    </div>
    <button type="submit" class="btn btn-outline-primary" value="Save"></button>
}

